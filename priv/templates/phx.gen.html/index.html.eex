    <div class="page-title-right d-none d-sm-inline-flex">
        <div class="d-none d-md-inline-flex justify-center align-items-center">
            <a href="<%%= <%= schema.route_helper %>_path(@conn, :new) %>" class="btn btn-color-scheme btn-sm ripple">
							  <i class="feather feather-plus"></i>
                <%%= gettext "Create <%= schema.human_singular %>" %>
            </a>
        </div>
    </div>
    <!-- /.page-title-right -->
</div>

