                        <form class="d-flex">
                            <div class="form-group">
                                <label for=""><%%= gettext "Email/phone" %></label>
                                <input type="text" name="keyword" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for=""><%%= gettext "Status" %></label>
                                <select class="form-control" name="status">
                                    <option value=""><%%= gettext("All") %></option>
                                    <option value="active"><%%= gettext("Active") %></option>
                                    <option value="inactive"><%%= gettext("Inactive") %></option>
                                </select>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary" type="submit"><%%= gettext "Filter" %></button>
