<!-- Page Header -->
<header class="masthead" style="background-image: url(<%= Routes.static_path(@conn, "/images/home-bg.jpg") %>)">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1><%= @blog_info[:title] %></h1>
          <span class="subheading"><%= @blog_info[:sub_title] %></span>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">

      <%= for post <- @posts do %>
        <%= render ChubiWeb.PostView, "_post_item.html", Map.put(assigns, :post, post) %>
      <% end %>

      <!-- Pager -->
      <div class="clearfix">
        <%=  if @paginator.has_prev? do %>
          <a class="btn btn-primary float-left" href="<%= prev_page_path(@conn, @paginator) %>">&larr; <%= gettext "Newer posts" %></a>
        <% end %>
        <%=  if @paginator.has_next? do %>
          <a class="btn btn-primary float-right" href="<%= next_page_path(@conn, @paginator) %>"><%= gettext "Older posts" %> &rarr;</a>
        <% end %>
      </div>
    </div>
  </div>
</div>

